<% content_for(:title, "#{@station.name} | Bus Timetable") %>

<h1><%= @station.name %></h1>

<h3>Lines serving this station:</h3>
<ul>
<% @station.lines.each do |line| %>
  <li><h4><%= link_to line.name, line_path(line.slug) %></h4></li>
<% end %>
</ul>

<%= link_to "Edit Station", edit_station_path, :class => "btn btn-success" %>
<%= link_to "Delete Station", station_path(@station),
                              :confirm => "Are you sure?",
                              :method => "delete",
                              :class => "btn btn-danger" %>

<br />
<br />


