<%= render('layouts/errors', object: @stop) %>

<%= form_for(@stop) do |f| %>
  <div class="form-group">
    <%= f.label "Stop Time" %>
    <%= f.time_field :stoptime %>
  </div>
  <div class="form-group">
    <%= f.label :line_id %>
    <%= collection_select(:stop, :line_id, @lines, :id, :name, {:prompt => true})
 %>
  </div>
  <div class="form-group">
    <%= f.label :station_id %>
    <%= collection_select(:stop, :station_id, @stations, :id, :name, {:prompt => true})
 %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
