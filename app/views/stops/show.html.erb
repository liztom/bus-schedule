<% content_for(:title, "#{@stop.station.name} - #{@stop.line.name} | Bus Timetable") %>

<h1><%= "#{@stop.station.name} - #{@stop.line.name}" %></h1>

<h3>Times at this stop:</h3>
<ul>
  <% @stop.stoptimes.each do |stoptime| %>
    <li>Bus <%= stoptime.bus.name %> will stop at <%= stoptime.name.strftime("%I:%M %p") %>  <%= link_to "Delete", stoptime_path(stoptime),
                                                  :confirm => "Are you sure?",
                                                  :method => "delete",
                                                  :class => "btn btn-danger btn-xs" %></li>
  <% end %>
</ul>

<h4>Add Stop Time</h4>
<%= render '/stoptimes/form' %>

<%= link_to "Edit Stop", edit_stop_path, :class => "btn btn-success" %>
<%= link_to "Delete Stop", stop_path(@stop),
                              :confirm => "Are you sure?",
                              :method => "delete",
                              :class => "btn btn-danger" %>

<br />
<br />

